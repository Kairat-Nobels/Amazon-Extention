{
    "manifest_version": 3,
    "name": "Amazon Price Tracker",
    "description": "Price Tracker for Amazon",
    "version": "1.0",
    "permissions": [
        "alarms",
        "notifications",
        "storage",
        "tabs",
        "cookies",
        "declarativeNetRequest",
        "management",
        "system.display"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "action": {
        "default_title": "Amazon Price Tracker",
        "default_popup": "popup/popup.html",
        "default_icon": "icons/logo.png"
    },
    "icons": {
        "16": "icons/logo.png",
        "32": "icons/logo.png",
        "64": "icons/logo.png",
        "128": "icons/logo.png"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "ruleset.json"
            }
        ]
    },
    "content_scripts": [
        {
            "js": [
                "js/content.js"
            ],
            "matches": [
                "*://*.amazon.com/*"
            ]
        }
    ]
}